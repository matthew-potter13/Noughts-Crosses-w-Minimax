<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="#000"
        android:columnCount="3"
        android:rowCount="5"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textColor="#FFD700"
            android:text="Wins: 0" />

        <TextView
            android:id="@+id/loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textColor="#FFD700"
            android:text="Losses: 0" />

        <TextView
            android:id="@+id/draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textColor="#FFD700"
            android:text="Draws: 0" />

        <Button
            android:id="@+id/grid00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/grid22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/circle_button"
            android:text=""
            android:textSize="75dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/minusLvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="20dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/square_button"
            android:text="-"
            android:textSize="50dp"
            android:textColor="#FFD700"/>

        <Button
            android:id="@+id/Lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="20dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/square_button"
            android:text="5"
            android:textSize="75dp"
            android:textColor="#FFD700"/>

        <Button
            android:id="@+id/incLvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="20dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/square_button"
            android:text="+"
            android:textSize="50dp"
            android:textColor="#FFD700"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>